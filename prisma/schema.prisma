// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  githubUsername String?   // GitHub login/username for fork operations
  accounts       Account[]
  sessions       Session[]

  watchedRepos            WatchedRepo[]
  notifications           Notification[]
  notificationPreferences NotificationPreferences?
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
}

model NotificationPreferences {
  id        String @id @default(cuid())
  userId    String @unique
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Master toggles
  emailEnabled Boolean @default(false)
  pushEnabled  Boolean @default(false)

  // Per-type email preferences
  newIssueEmail    Boolean @default(true)
  draftReadyEmail  Boolean @default(true)

  // Per-type push preferences
  newIssuePush     Boolean @default(true)
  draftReadyPush   Boolean @default(true)

  // Web Push subscription data (JSON)
  pushSubscription String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WatchedRepo {
  id        String   @id @default(cuid())
  userId    String
  owner     String   // e.g., "facebook" (original repo owner)
  repo      String   // e.g., "react"
  languages String   // JSON array of languages to filter
  labels    String   // JSON array of labels to filter (e.g., "good-first-issue")
  titleQuery String?  // Case-insensitive substring match on issue titles
  frozen    Boolean  @default(false)
  isOwned   Boolean  @default(false) // True if user owns the repo (no fork needed)
  forkOwner String?  // If forked, the owner of the fork (user's GitHub username)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  trackedIssues TrackedIssue[]

  @@unique([userId, owner, repo])
}

model TrackedIssue {
  id              String    @id @default(cuid())
  watchedRepoId   String
  issueNumber     Int
  title           String
  url             String
  labels          String    // JSON array
  state           String    @default("open") // open | closed
  isRead          Boolean   @default(false)
  claimedAt       DateTime? // User is working on this manually
  autoFixStatus   String    @default("queued") // queued | generating | draft_ready | published | rejected | failed | skipped
  forkIssueNumber Int?      // For non-owned repos: issue number on the fork
  draftPrUrl      String?
  draftPrNumber   Int?
  draftPrOwner    String?   // Owner of repo where PR exists (may be fork owner)
  generatingAt    DateTime? // When Copilot assignment started (for timeout detection)
  publishedAt     DateTime?
  closedAt        DateTime?
  archivedAt      DateTime?
  createdAt       DateTime  @default(now())
  notifiedAt      DateTime?

  watchedRepo   WatchedRepo    @relation(fields: [watchedRepoId], references: [id], onDelete: Cascade)
  notifications Notification[]

  @@unique([watchedRepoId, issueNumber])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  issueId   String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  issue TrackedIssue? @relation(fields: [issueId], references: [id], onDelete: SetNull)
}
