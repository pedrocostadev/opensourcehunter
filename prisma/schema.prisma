// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  watchedRepos  WatchedRepo[]
  notifications Notification[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WatchedRepo {
  id        String   @id @default(cuid())
  userId    String
  owner     String   // e.g., "facebook"
  repo      String   // e.g., "react"
  languages String   // JSON array of languages to filter
  labels    String   // JSON array of labels to filter (e.g., "good-first-issue")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  trackedIssues TrackedIssue[]

  @@unique([userId, owner, repo])
}

model TrackedIssue {
  id            String    @id @default(cuid())
  watchedRepoId String
  issueNumber   Int
  title         String
  url           String
  labels        String    // JSON array
  isRead        Boolean   @default(false)
  claimedAt     DateTime? // User is working on this manually
  autoFixStatus String    @default("queued") // queued | generating | draft_ready | published | rejected | failed | skipped
  draftPrUrl    String?
  draftPrNumber Int?
  publishedAt   DateTime?
  createdAt     DateTime  @default(now())
  notifiedAt    DateTime?

  watchedRepo   WatchedRepo    @relation(fields: [watchedRepoId], references: [id], onDelete: Cascade)
  notifications Notification[]

  @@unique([watchedRepoId, issueNumber])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  issueId   String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  issue TrackedIssue? @relation(fields: [issueId], references: [id], onDelete: SetNull)
}
