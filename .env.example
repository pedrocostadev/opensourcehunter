# Environment variables for OpenSourceHunter
# Copy this file to .env and fill in your values

# Database (PostgreSQL)
# For local dev: postgresql://user:password@localhost:5432/opensourcehunter
# For Vercel Postgres: automatically set when you add Vercel Postgres storage
DATABASE_URL="postgresql://user:password@localhost:5432/opensourcehunter"

# NextAuth.js
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secret-for-production"

# GitHub OAuth App
# Create one at: https://github.com/settings/developers
# Set callback URL to: http://localhost:3000/api/auth/callback/github
GITHUB_ID="your-github-oauth-app-client-id"
GITHUB_SECRET="your-github-oauth-app-client-secret"

# GitHub Webhook Secret
# Generate with: openssl rand -hex 32
# Used to verify incoming webhook requests
GITHUB_WEBHOOK_SECRET="your-webhook-secret"

# Cron Job Secret
# Generate with: openssl rand -hex 32
# Used to protect the /api/cron/poll-copilot endpoint
CRON_SECRET="your-cron-secret"
